{
  "name": "@babybeet/angular-testing-kit",
  "version": "1.0.6",
  "scripts": {
    "copy-assets": "cp CONTRIBUTING.md README.md LICENSE dist/*",
    "build": "ng build && pnpm copy-assets",
    "test": "ng test --browsers=ChromeHeadless",
    "test:ci": "ng test --no-watch --browsers=ChromeHeadless",
    "prepare": "husky install",
    "lint": "eslint projects/**/*.{ts,html}",
    "lint-staged": "lint-staged",
    "check-code-styles": "prettier --check \"**/(*.ts|*.json|*.md|*.html)\""
  },
  "type": "module",
  "dependencies": {
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "js-beautify": "^1.14.11",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.9",
    "@angular-eslint/builder": "16.3.1",
    "@angular-eslint/eslint-plugin": "16.3.1",
    "@angular-eslint/eslint-plugin-template": "16.3.1",
    "@angular-eslint/schematics": "16.3.1",
    "@angular-eslint/template-parser": "16.3.1",
    "@angular/cli": "^16.2.9",
    "@angular/compiler-cli": "^16.2.0",
    "@babybeet/eslint-config-base": "^1.0.2",
    "@types/jasmine": "~4.3.0",
    "@types/js-beautify": "^1.14.3",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.0.2",
    "ng-packagr": "^16.2.0",
    "prettier": "^3.0.3",
    "typescript": "~5.1.3"
  },
  "lint-staged": {
    "**/*.{ts,html}": [
      "prettier -w --cache",
      "eslint --fix --cache"
    ],
    "**/*.{json,md,scss}": [
      "prettier -w --cache"
    ]
  }
}
